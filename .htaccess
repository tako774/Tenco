# For XREA
# SetEnv RUBYLIB /virtual/takoika/lib/ruby:/virtual/takoika/lib/ruby/site_ruby/1.8
# SetEnv GEM_HOME /virtual/takoika/lib/ruby/gems/1.8
RewriteEngine on
RewriteRule ^account/([0-9A-Za-z_][0-9A-Za-z_\.]*)/manage/$ account_manage.cgi?account_name=$1
RewriteRule ^game/([0-9]+)$/ game.cgi?id=$1
RewriteRule ^game/([0-9]+)/account/([0-9A-Za-z_][0-9A-Za-z_\.]*)/([^/]*)$ game_account.cgi?game_id=$1&account_name=$2&$3
RewriteRule ^game/([0-9]+)/pov/([0-9]+)/$ pov.cgi?game_id=$1&pov_id=$2&pov_eval_unit=game
RewriteRule ^game/([0-9]+)/pov/([0-9]+)/type1/$ pov.cgi?game_id=$1&pov_id=$2&pov_eval_unit=game_type1
RewriteRule ^game/([0-9]+)/type1_vs_type1_stats/$ game_type1_vs_type1_stats.cgi?game_id=$1
